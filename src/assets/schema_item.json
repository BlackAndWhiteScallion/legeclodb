{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "uid",
      "name"
    ],
    "additionalProperties": false,
    "properties": {
      "uid": { "type": "string" },
      "icon": { "type": "string" },
      "name": { "type": "string" },
      "date": { "type": "string" },
      "desc": { "type": "string" },
      "descs": { "type": "object" },
      "slot": { "$ref": "schema_skill.json#/$defs/equipType" },
      "rarity": { "$ref": "schema_skill.json#/$defs/rarityType" },
      "classes": {
        "type": "array",
        "items": {
          "$ref": "schema_skill.json#/$defs/unitType"
        }
      },
      "statusInit": { "type": "array" },
      "statusLv": { "type": "array" },
      "amuletType": { "$ref": "schema_skill.json#/$defs/amuletType" },
      "buff": {
        "type": "array",
        "items": { "$ref": "schema_skill.json#/$defs/effect" }
      },
      "debuff": {
        "type": "array",
        "items": { "$ref": "schema_skill.json#/$defs/effect" }
      },
      "immune": {
        "type": "array",
        "items": { "$ref": "schema_skill.json#/$defs/effect" }
      },
      "statusEffects": {
        "type": "array",
        "items": { "$ref": "schema_skill.json#/$defs/effect" }
      },
      "fixedDamage": {
        "type": "array",
        "items": { "$ref": "schema_skill.json#/$defs/fixedDamage" }
      },
      "heal": {
        "type": "array",
        "items": { "$ref": "schema_skill.json#/$defs/heal" }
      },
      "multiMove": {
        "$ref": "schema_skill.json#/$defs/multiMove"
      },
      "buffCancel": {
        "type": "array",
        "items": { "$ref": "schema_skill.json#/$defs/buffCancel" }
      },
      "ctReduction": {
        "type": "array",
        "items": { "$ref": "schema_skill.json#/$defs/ctReduction" }
      },
      "tags": {
        "type": "array",
        "items": { "type": "string" }
      },
      "note": { "type": "string" }
    }
  }
}
