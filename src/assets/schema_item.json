{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/item",

  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "uid",
      "name"
    ],
    "additionalProperties": false,
    "properties": {
      "uid": { "type": "string" },
      "icon": { "type": "string" },
      "name": { "type": "string" },
      "date": { "type": "string" },
      "desc": { "type": "string" },
      "descs": { "type": "object" },
      "slot": { "type": "string" },
      "rarity": { "type": "string" },
      "classes": { "type": "array" },
      "statusInit": { "type": "array" },
      "statusLv": { "type": "array" },
      "amuletType": { "enum": [ "月", "太陽" ] },
      "buff": {
        "type": "array",
        "items": {
          "$ref": "schema_skill.json#/$defs/effect"
        }
      },
      "debuff": {
        "type": "array",
        "items": {
          "$ref": "schema_skill.json#/$defs/effect"
        }
      },
      "immune": {
        "type": "array",
        "items": {
          "$ref": "schema_skill.json#/$defs/effect"
        }
      },
      "statusEffects": {
        "type": "array",
        "items": {
          "$ref": "schema_skill.json#/$defs/effect"
        }
      },
      "drawback": {
        "type": "array",
        "items": {
          "$ref": "schema_skill.json#/$defs/effect"
        }
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "note": { "type": "string" }
    }
  }
}
