{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$defs": {
    "unitType": {
      "enum": [ "ソルジャー", "ランサー", "ライダー", "エアリアル", "ソーサラー", "セイント", "シューター", "アサシン", "ヴォイド" ]
    },
    "symbolType": {
      "enum": [ "ゼニス", "オリジン", "ナディア" ]
    },
    "supportlType": {
      "enum": [ "支援", "攻撃", "妨害" ]
    },
    "rarityType": {
      "enum": [ "N", "R", "SR", "SSR" ]
    },
    "statusType": {
      "enum": [ "最大HP", "アタック", "ディフェンス", "マジック", "レジスト", "テクニック" ]
    },
    "damageType": {
      "enum": [ "アタック", "マジック" ]
    },
    "equipType": {
      "enum": [ "武器", "鎧", "兜", "アクセサリ", "月のアミュレット", "太陽のアミュレット" ]
    },
    "amuletType": {
      "enum": [ "月", "太陽" ]
    },
    "terrainType": {
      "enum": [ "平地", "草原", "森", "水中", "荒地", "崖", "空", "山岳", "洞窟", "砂地", "砂丘", "積雪", "置物", "砦", "壁", "柵", "溶岩" ]
    },
    "targetEnum": {
      "enum": [ "自身", "自身(メイン)", "自身(サポート)", "味方(低HP)", "単体", "範囲", "範囲(ランダム)", "味方全体", "敵全体", "スキル対象", "攻撃対象", "召喚元", "召喚先" ]
    },
    "targetType": {
      "anyOf": [
        { "$ref": "#/$defs/targetEnum" },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "uid": { "type": "string" }
          }
        }
      ]
    },

    "timingType": {
      "enum": [
        "永続",
        "自ターン開始時",
        "自ターン終了時",
        "敵ターン開始時",
        "敵ターン終了時",
        "行動前",
        "行動後",
        "攻撃前",
        "攻撃後",
        "戦闘前",
        "戦闘後",
        "敵撃破時",
        "死亡時",
        "復活時"
      ]
    },
    "effectType": {
      "enum": [
        "最大HP",
        "アタック",
        "ディフェンス",
        "マジック",
        "レジスト",
        "テクニック",
        "ディフェンス無視",
        "レジスト無視",
        "与ダメージ",
        "与ダメージ(物理)",
        "与ダメージ(魔法)",
        "与ダメージ(スキル)",
        "与ダメージ(範囲スキル)",
        "与ダメージ(通常攻撃)",
        "ダメージ耐性",
        "ダメージ耐性(物理)",
        "ダメージ耐性(魔法)",
        "ダメージ耐性(範囲)",
        "クリティカル率",
        "クリティカル率耐性",
        "クリティカルダメージ倍率",
        "治療効果",
        "被治療効果",
        "射程(通常攻撃)",
        "射程(スキル)",
        "範囲",
        "移動",
        "移動コスト1化",
        "ランダム",
        "シールド",
        "トークン",

        "スタン",
        "アクティブスキル使用不可",
        "パッシブスキル使用不可",
        "ガード不可",
        "強化不可",
        "回復不可",
        "DoT",
        "全デバフ",
        "固定ダメージ",
        "アタックダウン",
        "ディフェンスダウン",
        "マジックダウン",
        "レジストダウン",
        "移動ダウン",
        "位置移動"
      ]
    },
    "conditionVariable": {
      "enum": [
        "move",
        "range",
        "stack",
        "token",
        "targetToken",
        "nearAllyCount",
        "nearEnemyCount",
        "activeBuffCount",
        "activeDebuffCount",
        "targetActiveBuffCount",
        "targetActiveDebuffCount"
      ]
    },
    "numericCompare": {
      "type": "array",
      "items": {
        "anyOf": [
          { "enum": [ ">", "<", ">=", "<=", "==" ] },
          { "enum": [ "targetHp" ] },
          { "type": "number" },
          {
            "type": "array",
            "items": { "type": "number" }
          }
        ]
      },
      "minItems": 2,
      "maxItems": 2
    },
    "tokenCompare": {
      "type": "object",
      "required": [ "tokenName", "compare" ],
      "additionalProperties": false,
      "properties": {
        "tokenName": { "type": "string" },
        "compare": { "$ref": "#/$defs/numericCompare" }
      }
    },
    "areaShape": {
      "enum": [ "範囲", "周囲", "直線", "特殊" ]
    },
    "areaCenter": {
      "enum": [ "自分中心", "中心指定" ]
    },
    "areaType": {
      "anyOf": [
        { "type": "number" },
        {
          "type": "array",
          "items": { "type": "number" }
        },
        {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "anyOf": [
                  { "type": "number" },
                  {
                    "type": "array",
                    "items": { "type": "number" }
                  }
                ]
              },
              { "$ref": "#/$defs/areaShape" },
              { "$ref": "#/$defs/areaCenter" },
              { "enum": [ "自身を含む", "自身を除く" ] }
            ]
          }
        }
      ]
    },
    "unitsInArea": {
      "type": "object",
      "required": [ "area", "compare" ],
      "additionalProperties": false,
      "properties": {
        "area": { "$ref": "#/$defs/areaType" },
        "compare": { "$ref": "#/$defs/numericCompare" }
      }
    },
    "statusConversion": {
      "type": "object",
      "required": [ "from", "rate" ],
      "properties": {
        "from": { "$ref": "#/$defs/statusType" },
        "rate": {
          "anyOf": [
            { "type": "number" },
            {
              "type": "array",
              "items": { "type": "number" }
            }
          ]
        }
      }
    },
    "variableStatusRate": {
      "type": "object",
      "required": [ "min", "max", "by", "order" ],
      "properties": {
        "min": {
          "anyOf": [
            { "type": "number" },
            {
              "type": "array",
              "items": { "type": "number" }
            }
          ]
        },
        "max": {
          "anyOf": [
            { "type": "number" },
            {
              "type": "array",
              "items": { "type": "number" }
            }
          ]
        },
        "by": { "enum": [ "HP" ] },
        "order": { "enum": [ "多いほど上昇", "低いほど上昇" ] },
        "borders": {
          "type": "array",
          "items": { "type": "number" }
        }
      }
    },

    "multiply": {
      "type": "object",
      "required": [ "by", "max" ],
      "additionalProperties": false,
      "properties": {
        "max": { "type": "number" },
        "by": { "$ref": "#/$defs/conditionVariable" },
        "area": { "$ref": "#/$defs/areaType" },
        "tokenName": { "type": "string" }
      }
    },

    "condition": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "onCloseCombat": { "type": "boolean" },
        "onRangedCombat": { "type": "boolean" },
        "onCriticalHit": { "type": "boolean" },
        "onBattle": { "type": "boolean" },
        "onGuard": { "type": "boolean" },
        "onDamage": { "type": "boolean" },
        "onKill": { "type": "boolean" },
        "onActiveSkill": { "type": "boolean" },
        "onSingleSkill": { "type": "boolean" },
        "onAreaSkill": { "type": "boolean" },
        "onTargetAlly": { "type": "boolean" },
        "onTargetEnemy": { "type": "boolean" },
        "onOwnTurn": { "type": "boolean" },
        "onEnemyTurn": { "type": "boolean" },
        "onSymbol": {
          "type": "array",
          "uniqueItems": true,
          "items": { "$ref": "#/$defs/symbolType" }
        },
        "onClass": {
          "type": "array",
          "uniqueItems": true,
          "items": { "$ref": "#/$defs/unitType" }
        },
        "onTargetClass": {
          "type": "array",
          "uniqueItems": true,
          "items": { "$ref": "#/$defs/unitType" }
        },
        "onClassAdvantage": { "type": "boolean" },
        "onEffect": { "type": "array" },
        "onTerrain": {
          "type": "array",
          "uniqueItems": true,
          "items": { "$ref": "#/$defs/terrainType" }
        },

        "probability": { "type": [ "number", "array" ] },
        "hp": { "$ref": "#/$defs/numericCompare" },
        "mainHp": { "$ref": "#/$defs/numericCompare" },
        "supportHp": { "$ref": "#/$defs/numericCompare" },
        "targetHp": { "$ref": "#/$defs/numericCompare" },
        "turn": { "$ref": "#/$defs/numericCompare" },
        "activeBuffCount": { "$ref": "#/$defs/numericCompare" },
        "activeDebuffCount": { "$ref": "#/$defs/numericCompare" },
        "targetActiveBuffCount": { "$ref": "#/$defs/numericCompare" },
        "targetActiveDebuffCount": { "$ref": "#/$defs/numericCompare" },
        "terrainDef": { "$ref": "#/$defs/numericCompare" },
        "token": { "$ref": "#/$defs/tokenCompare" },
        "targetToken": { "$ref": "#/$defs/tokenCompare" },
        "nearAllyCount": { "$ref": "#/$defs/unitsInArea" },
        "nearEnemyCount": { "$ref": "#/$defs/unitsInArea" }
      }
    },

    "effect": {
      "type": "object",
      "required": [ "type" ],
      "additionalProperties": false,
      "properties": {
        "type": { "$ref": "#/$defs/effectType" },
        "value": { "type": [ "number", "array" ] },
        "add": { "$ref": "#/$defs/statusConversion" },
        "replace": { "$ref": "#/$defs/statusConversion" },
        "variable": { "$ref": "#/$defs/variableStatusRate" },
        "ephemeral": { "type": "boolean" },
        "duration": { "type": [ "number", "array" ] },
        "stack": { "type": "number" },
        "multiply": { "$ref": "#/$defs/multiply" },
        "target": { "$ref": "#/$defs/targetEnum" },
        "area": { "$ref": "#/$defs/areaType" },
        "unitCount": { "type": "number" },
        "amount": { "type": [ "number", "string" ] },
        "variant": { "type": [ "number", "string" ] },
        "tokenName": { "type": "string" },
        "slot": { "type": "string" },
        "timing": { "$ref": "#/$defs/timingType" },
        "condition": { "$ref": "#/$defs/condition" },
        "trigger": {
          "type": "object",
          "required": [ "target", "timing" ],
          "additionalProperties": false,
          "properties": {
            "target": { "$ref": "#/$defs/targetEnum" },
            "area": { "$ref": "#/$defs/areaType" },
            "unitCount": { "type": "number" },
            "timing": { "$ref": "#/$defs/timingType" },
            "condition": { "$ref": "#/$defs/condition" }
          }
        }
      }
    },

    "fixedDamage": {
      "type": "object",
      "required": [ "base", "rate" ],
      "additionalProperties": false,
      "properties": {
        "base": {
          "anyOf": [
            { "$ref": "#/$defs/statusType" },
            { "enum": [ "与ダメージ" ] }
          ]
        },
        "rate": { "type": [ "number", "array" ] },
        "multiply": { "$ref": "#/$defs/multiply" },
        "target": { "$ref": "#/$defs/targetType" },
        "area": { "$ref": "#/$defs/areaType" },
        "unitCount": { "type": "number" },
        "timing": { "$ref": "#/$defs/timingType" },
        "condition": { "$ref": "#/$defs/condition" }
      }
    },

    "areaDamage": {
      "type": "object",
      "required": [ "rate", "area" ],
      "additionalProperties": false,
      "properties": {
        "rate": { "type": [ "number", "array" ] },
        "target": { "$ref": "#/$defs/targetType" },
        "area": { "$ref": "#/$defs/areaType" },
        "timing": { "$ref": "#/$defs/timingType" },
        "condition": { "$ref": "#/$defs/condition" }
      }
    },

    "shield": {
      "type": "object",
      "required": [ "base", "rate" ],
      "additionalProperties": false,
      "properties": {
        "base": { "$ref": "#/$defs/statusType" },
        "rate": { "type": [ "number", "array" ] },
        "condition": { "$ref": "#/$defs/condition" }
      }
    },

    "heal": {
      "type": "object",
      "required": [ "type", "rate" ],
      "additionalProperties": false,
      "properties": {
        "type": { "enum": [ "マジック", "HP割合", "ダメージ割合" ] },
        "rate": {
          "anyOf": [
            { "type": "number" },
            {
              "type": "array",
              "items": { "type": "number" }
            }
          ]
        },
        "target": { "$ref": "#/$defs/targetEnum" },
        "area": { "$ref": "#/$defs/areaType" },
        "timing": { "$ref": "#/$defs/timingType" },
        "condition": { "$ref": "#/$defs/condition" }
      }
    },

    "revive": {
      "type": "object",
      "required": [ "rate" ],
      "additionalProperties": false,
      "properties": {
        "rate": {
          "anyOf": [
            { "type": "number" },
            {
              "type": "array",
              "items": { "type": "number" }
            }
          ]
        },
        "count": { "type": "number" },
        "condition": { "$ref": "#/$defs/condition" }
      }
    },

    "buffCancel": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "value": {
          "anyOf": [
            { "type": "number" },
            {
              "type": "array",
              "items": { "type": "number" }
            }
          ]
        },
        "target": { "$ref": "#/$defs/targetEnum" },
        "timing": { "$ref": "#/$defs/timingType" },
        "condition": { "$ref": "#/$defs/condition" }
      }
    },

    "buffSteal": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "value": {
          "anyOf": [
            { "type": "number" },
            {
              "type": "array",
              "items": { "type": "number" }
            }
          ]
        },
        "target": { "$ref": "#/$defs/targetEnum" },
        "timing": { "$ref": "#/$defs/timingType" },
        "condition": { "$ref": "#/$defs/condition" }
      }
    },

    "ctReduction": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "value": {
          "anyOf": [
            { "type": "number" },
            {
              "type": "array",
              "items": { "type": "number" }
            }
          ]
        },
        "target": { "$ref": "#/$defs/targetEnum" },
        "targetSkill": {
          "enum": [ "全スキル", "使用したスキル" ]
        },
        "timing": { "$ref": "#/$defs/timingType" },
        "condition": { "$ref": "#/$defs/condition" },
        "ct": { "type": "number" },
        "area": { "$ref": "#/$defs/areaType" }
      }
    },

    "guard": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "enum": [ "物理", "魔法", "全攻撃" ] },
        "area": { "$ref": "#/$defs/areaType" },
        "duration": { "type": "number" },
        "condition": { "$ref": "#/$defs/condition" }
      }
    },

    "ignoreGuard": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "condition": { "$ref": "#/$defs/condition" }
      }
    },

    "doubleAttack": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ct": {
          "anyOf": [
            { "type": "number" },
            {
              "type": "array",
              "items": { "type": "number" }
            }
          ]
        },
        "condition": { "$ref": "#/$defs/condition" }
      }
    },

    "supportAttack": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "condition": { "$ref": "#/$defs/condition" }
      }
    },

    "multiMove": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "enum": [ "基本移動力", "残移動力", "固定値移動力" ] },
        "value": { "type": "number" },
        "condition": { "$ref": "#/$defs/condition" }
      }
    },

    "multiAction": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "target": { "$ref": "#/$defs/targetEnum" },
        "ct": {
          "anyOf": [
            { "type": "number" },
            {
              "type": "array",
              "items": { "type": "number" }
            }
          ]
        },
        "condition": { "$ref": "#/$defs/condition" }
      }
    },

    "positionManipulate": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "enum": [ "引き寄せ", "後退", "テレポート" ] },
        "amount": { "type": "number" }
      }
    },

    "damageRateSp": {
      "type": "object",
      "required": [ "value", "condition" ],
      "additionalProperties": false,
      "properties": {
        "value": {
          "anyOf": [
            { "type": "number" },
            {
              "type": "array",
              "items": { "type": "number" }
            }
          ]
        },
        "condition": { "$ref": "#/$defs/condition" },
        "todo": { "type": "string" }
      }
    }
  },
  "type": "array",
  "items": {
    "type": "object",
    "required": [ "uid", "icon", "name" ],
    "additionalProperties": false,
    "properties": {
      "uid": { "type": "string" },
      "icon": { "type": "string" },
      "name": { "type": "string" },
      "desc": { "type": "string" },
      "descs": { "type": "object" },
      "ct": { "type": [ "integer", "string" ] },
      "area": { "type": [ "integer", "string" ] },
      "areaShape": { "$ref": "#/$defs/areaShape" },
      "areaShapeId": { "type": "string" },
      "range": { "type": [ "integer", "string" ] },
      "rangeShape": { "$ref": "#/$defs/areaShape" },
      "cost": { "type": "integer" },
      "isNormalAttack": { "type": "boolean" },
      "isSymbolSkill": { "type": "boolean" },
      "damageRate": {
        "anyOf": [
          { "type": "number" },
          {
            "type": "array",
            "items": { "type": "number" }
          }
        ]
      },
      "damageRateSp": {
        "type": "array",
        "items": { "$ref": "#/$defs/damageRateSp" }
      },
      "fixedDamage": {
        "type": "array",
        "items": { "$ref": "#/$defs/fixedDamage" }
      },
      "areaDamage": {
        "type": "array",
        "items": { "$ref": "#/$defs/areaDamage" }
      },
      "shield": {
        "type": "array",
        "items": { "$ref": "#/$defs/shield" }
      },
      "heal": {
        "type": "array",
        "items": { "$ref": "#/$defs/heal" }
      },
      "revive": {
        "type": "array",
        "items": { "$ref": "#/$defs/revive" }
      },
      "summon": { "type": [ "array" ] },
      "baseStatusBoost": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "hp": { "type": "number" },
          "atk": { "type": "number" },
          "def": { "type": "number" },
          "mag": { "type": "number" },
          "res": { "type": "number" },
          "tec": { "type": "number" },
          "cri": { "type": "number" }
        }
      },
      "buff": {
        "type": "array",
        "items": { "$ref": "#/$defs/effect" }
      },
      "debuff": {
        "type": "array",
        "items": { "$ref": "#/$defs/effect" }
      },
      "immune": {
        "type": "array",
        "items": { "$ref": "#/$defs/effect" }
      },
      "statusEffects": {
        "type": "array",
        "items": { "$ref": "#/$defs/effect" }
      },
      "buffCancel": {
        "type": "array",
        "items": { "$ref": "#/$defs/buffCancel" }
      },
      "buffSteal": {
        "type": "array",
        "items": { "$ref": "#/$defs/buffSteal" }
      },
      "guard": {
        "type": "array",
        "items": { "$ref": "#/$defs/guard" }
      },
      "ignoreGuard": {
        "type": "array",
        "items": { "$ref": "#/$defs/ignoreGuard" }
      },
      "doubleAttack": {
        "type": "array",
        "items": { "$ref": "#/$defs/doubleAttack" }
      },
      "supportAttack": {
        "type": "array",
        "items": { "$ref": "#/$defs/supportAttack" }
      },
      "multiMove": {
        "type": "array",
        "items": { "$ref": "#/$defs/multiMove" }
      },
      "multiAction": {
        "type": "array",
        "items": { "$ref": "#/$defs/multiAction" }
      },
      "ctReduction": {
        "type": "array",
        "items": { "$ref": "#/$defs/ctReduction" }
      },
      "positionManipulate": {
        "type": "array",
        "items": { "$ref": "#/$defs/positionManipulate" }
      },
      "tags": {
        "type": "array",
        "items": { "type": "string" }
      },
      "note": { "type": "string" }
    }
  }
}
